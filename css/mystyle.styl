*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box
  margin 0
  padding 0
body
  background #FEFEFE
/* Contenedor del menu de la vista mobile */
.menu_bar
  display none
header
  width 100%
  nav
    background #023859
    margin: 20px auto
    max-width 1000px
    /* width para que quede un margen o espacio */
    width 95%
    /* z-index posicionamos la navegaci칩n por encima de todo */
    z-index 1000
    ul
      list-style none
      li
        /*display:inline-block acomodar los menu horizontalmente */
        display inline-block
        /* --- position:relative para los sub-menus ---- */
        position relative
        &:hover
          background #E6344A
        a
          color #fff
          display block
          padding 20px
          text-decoration none
          span
            margin-right 10px
      /* --- Sub menu --- */
      /* Al pasar el mouse por el elemento li la clase children se mostrara */
      li
        &:hover .children
          display: block;

        .children
          background #011826
          display none
          /* position:absolute se acomodan los elementos dentro del submenu del padre - header nav ul li- que tiene la position relative  */
          position absolute
          width 150%
          z-index 1000
          li
            border-bottom 1px solid rgba(255,255,255,0.5)
            /* display:block el submenu abarca el 100%; */
            display block
            overflow hidden
            a
              /* display:block el submenu abarca el 100%; */
              display block
              span
                float right
                margin-left 10px         
                margin-right 0
                position relative
                top 3px
        .caret
          margin-left 10px
          margin-right 0
          position relative
          top 3px
          
// ******  responsive  ********
@media screen and (max-width: 800px)
  body
    background yellow
    /*El padding-top:; es de la altura de la barra de navegaci칩n movil para que asi se pueda leer el texto que hay en el section y no lo oculte la barra de navegaci칩n que esta fija*/
    padding-top 76px
  /* .menu_bar: es el menu que aparece para mobile*/
  .menu_bar
    background #E6344A
    display block
    position fixed
    top 0
    width 100%
  /* .bt_menu: es el que le da el alto al menu */
  .bt_menu
    display block
    padding 20px
    color #fff
    overflow hidden
    font-size 25px
    font-weight bold
    text-decoration none
    span 
      float right
      font-size 36px
  /* header nav: es el menu normal y se coloca fixed para fijarlo y con right se empuja desde la derecha 100% para ocultarlo, pero la funcionalidad se da desde jquery */
  header
    nav
      margin 0
      position fixed
      /* overflow: scroll si la pantalla del dspositivo es muy peque침a aparece el scroll */
      overflow scroll
      /* Al darle la altura del 100% el menu contacto no se muestra por el desplazamiento de la altura del menu_bar "76px" */
      /* calc: calcular */
      /* ---  La funcion calc: se utiliza para que la parte que queda oculta abajo por los 76px de la altura del menu no lo afecte y se muestre --- */
      height calc(100% - 76px)
      right 100%
      /* width: decimos cuanto queremos que abarque el menu */
      width 80%
      ul
        li
          border-bottom:px solid rgba(255,255,255,.5)
          display block
          a
            display block
        li
          &:hover .children
            /* Ocultamos el submenu para realizar la funcionalidad de "mostrar" con jQuery*/
            //display none
          .children  
            /* position:relative: solucionamos el problema que al pasar el mouse sobre el menu "proyectos" se desplieje el submenu y oculte el resto del menu,
               con position relative al seleccionar el submenu el resto del menu se desplaza haca abajo*/
            position relative
            width 100% 
            li
              a
                margin-left 20px
          .caret
            float right



      
          

                  
    

